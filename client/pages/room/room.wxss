/* 房间容器 */
.room-container {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #1a5f1a 0%, #0d3b0d 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 房间头部 */
.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(0, 0, 0, 0.3);
  color: white;
}

.room-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.room-id {
  font-size: 32rpx;
  font-weight: bold;
}

.room-stake {
  font-size: 28rpx;
  color: #ffd700;
}

.room-type {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  width: fit-content;
}

.room-actions {
  display: flex;
  gap: 15rpx;
}

.room-actions button {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 10rpx 15rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.room-actions button::after {
  border: none;
}

.btn-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.btn-exit {
  background: rgba(255, 100, 100, 0.3) !important;
}

/* 游戏牌桌 */
.game-table {
  flex: 1;
  position: relative;
  margin: 40rpx;
  background: url('/images/table-bg.png') no-repeat center center;
  background-size: cover;
  border-radius: 30rpx;
  border: 8rpx solid #8b4513;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.5);
  overflow: hidden;
}

/* 桌中央区域 */
.table-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 400rpx;
  height: 400rpx;
  background: rgba(42, 122, 42, 0.9);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-shadow: inset 0 0 30rpx rgba(0, 0, 0, 0.5);
}

.waiting-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.waiting-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  text-align: center;
}

.player-count {
  font-size: 28rpx;
  color: #ffd700;
}

.owner-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  width: 100%;
}

.stake-setting {
  display: flex;
  align-items: center;
  gap: 15rpx;
  background: rgba(0, 0, 0, 0.3);
  padding: 15rpx 20rpx;
  border-radius: 20rpx;
  width: 100%;
}

.setting-label {
  color: white;
  font-size: 28rpx;
}

.stake-picker {
  flex: 1;
  background: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

.btn-start {
  background: linear-gradient(135deg, #4CAF50 0%, #2a7a2a 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
}

.btn-start[disabled] {
  background: #666;
  color: #ccc;
}

.btn-kick-all {
  background: rgba(255, 100, 100, 0.2);
  color: #ff6b6b;
  border: 1rpx solid #ff6b6b;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

.player-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.ready-status {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: rgba(0, 0, 0, 0.3);
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
}

.ready-text {
  font-size: 32rpx;
  color: white;
}

.ready-tip {
  font-size: 24rpx;
  color: #ffd700;
  text-align: center;
}

/* 倒计时区域 */
.countdown-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.countdown-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 10rpx solid #4CAF50;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.countdown-number {
  font-size: 72rpx;
  color: white;
  font-weight: bold;
}

.countdown-text {
  font-size: 28rpx;
  color: #ccc;
}

.countdown-tip {
  font-size: 28rpx;
  color: #ffd700;
  text-align: center;
}

/* 游戏已开始区域 */
.game-started {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.game-status-text {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
}

.game-status-tip {
  font-size: 28rpx;
  color: #ccc;
}

.btn-rejoin {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

/* 聊天区域 */
.chat-section {
  height: 350rpx;
  background: rgba(0, 0, 0, 0.7);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  display: flex;
  flex-direction: column;
  margin-top: auto;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.chat-title {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.chat-clear {
  font-size: 24rpx;
  color: #2196F3;
}

.chat-messages {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.chat-input-area {
  padding: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.quick-chat-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.quick-chat-btn {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.quick-chat-btn::after {
  border: none;
}

.chat-input-row {
  display: flex;
  gap: 15rpx;
}

.chat-input {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  color: white;
  font-size: 28rpx;
}

.btn-send-chat {
  background: #2196F3;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  width: auto;
}

.btn-send-chat::after {
  border: none;
}

/* 玩家操作菜单 */
.player-menu-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s;
}

.player-menu-modal.show {
  display: flex;
  opacity: 1;
}

.player-menu-content {
  background: white;
  border-radius: 30rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
  transform: translateY(50rpx);
  transition: transform 0.3s;
}

.player-menu-modal.show .player-menu-content {
  transform: translateY(0);
}

.player-info-menu {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
}

.player-avatar-menu {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #1a5f1a;
}

.player-name-menu {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.player-id-menu {
  font-size: 24rpx;
  color: #999;
}

.menu-actions {
  padding: 20rpx 30rpx;
}

.menu-btn {
  display: flex;
  align-items: center;
  width: 100%;
  background: transparent;
  border: none;
  padding: 25rpx 20rpx;
  text-align: left;
  border-bottom: 1rpx solid #eee;
}

.menu-btn::after {
  border: none;
}

.menu-btn:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-close {
  width: 100%;
  background: #f5f7fa;
  color: #666;
  border: none;
  border-radius: 0;
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
}

.menu-close::after {
  border: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  justify-content: center;
  align-items: center;
  z-index: 1001;
  opacity: 0;
  transition: opacity 0.3s;
}

.modal.show {
  display: flex;
  opacity: 1;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.password-modal .modal-body {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.password-modal input {
  width: 100%;
  padding: 30rpx;
  font-size: 36rpx;
  text-align: center;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.error-msg {
  color: #ff6b6b;
  font-size: 24rpx;
}

.exit-modal .modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.exit-warning {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx;
  gap: 20rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.btn-cancel {
  background: #f5f7fa;
  color: #666;
  border: none;
}

.btn-confirm {
  background: linear-gradient(135deg, #1a5f1a 0%, #2a7a2a 100%);
  color: white;
  border: none;
}

.btn-confirm::after, .btn-cancel::after {
  border: none;
}