.mode-card {
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}

.mode-card:active {
  transform: scale(0.98);
}

.mode-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.mode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.mode-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}