# 服务器配置
NODE_ENV=development
PORT=3000
HOST=localhost
CORS_ORIGIN=http://localhost:8080

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/wechat_poker
REDIS_URI=redis://localhost:6379

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# 微信小程序配置
WX_APPID=your-wechat-appid
WX_SECRET=your-wechat-secret

# 支付配置
WX_PAY_MCHID=your-wechat-pay-mchid
WX_PAY_KEY=your-wechat-pay-key
ALIPAY_APPID=your-alipay-appid
ALIPAY_PRIVATE_KEY=your-alipay-private-key

# 文件上传配置
MAX_FILE_SIZE=2097152
UPLOAD_PATH=./uploads

# 邮件配置（用于通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 游戏配置
BASE_SCORE=100
MIN_PLAYERS=4
MAX_ROOM_IDLE_TIME=3600

# 日志配置
LOG_LEVEL=info
LOG_PATH=./logs

# 安全配置
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100