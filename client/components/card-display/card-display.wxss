/* 基础样式 */
.card-display {
  position: relative;
  width: 60rpx;
  height: 80rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
  transition: all 0.2s;
  overflow: hidden;
}

.card-display:active {
  transform: translateY(-5rpx);
}

/* 选中状态 */
.card-display.selected {
  transform: translateY(-10rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.4);
}

/* 禁用状态 */
.card-display.disabled {
  opacity: 0.6;
  filter: grayscale(50%);
}

/* 不同类型的大小 */
.card-display.small {
  width: 50rpx;
  height: 70rpx;
  font-size: 20rpx;
}

.card-display.normal {
  width: 60rpx;
  height: 80rpx;
  font-size: 24rpx;
}

.card-display.large {
  width: 80rpx;
  height: 110rpx;
  font-size: 28rpx;
}

.card-display.table {
  width: 70rpx;
  height: 95rpx;
  font-size: 26rpx;
}

/* 牌背面 */
.card-back {
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, #1a5f1a, #2a7a2a);
  border-radius: 8rpx;
  overflow: hidden;
}

.back-image {
  width: 100%;
  height: 100%;
}

/* 牌正面 */
.card-front {
  width: 100%;
  height: 100%;
  background: white;
  border-radius: 8rpx;
  position: relative;
}

/* 牌面内容 */
.card-content {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 5rpx;
  box-sizing: border-box;
}

/* 角落样式 */
.corner {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20rpx;
}

.corner.top-left {
  top: 5rpx;
  left: 5rpx;
}

.corner.bottom-right {
  bottom: 5rpx;
  right: 5rpx;
  transform: rotate(180deg);
}

.card-rank {
  font-size: 1em;
  font-weight: bold;
  line-height: 1;
}

/* 花色样式 */
.suit-text.spade, .suit-text.club {
  color: black;
}

.suit-text.heart, .suit-text.diamond {
  color: #ff6b6b;
}

.suit-icon {
  width: 0.8em;
  height: 0.8em;
}

.corner-suit {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 2rpx;
}

/* 中央花色 */
.center-suit {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60%;
  height: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.suit-icon-large {
  width: 100%;
  height: 100%;
}

.suit-text-large {
  font-size: 2em;
}

/* 大小王样式 */
.joker-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80%;
}

.joker-image {
  width: 60%;
  height: 60%;
  margin-bottom: 5rpx;
}

.joker-text {
  font-size: 0.6em;
  font-weight: bold;
  color: #333;
  text-align: center;
}

/* 选中标记 */
.selected-mark {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 25rpx;
  height: 25rpx;
  background: #4CAF50;
  border-radius: 50%;
  border: 2rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selected-icon {
  width: 15rpx;
  height: 15rpx;
}

/* 禁用遮罩 */
.disabled-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.disabled-icon {
  width: 30rpx;
  height: 30rpx;
}