/* app.wxss - 全局样式 */

/* 基础样式重置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background: #f5f7fa;
  line-height: 1.4;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

/* 通用容器样式 */
.container {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

/* 安全区域适配 */
.safe-area {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 通用按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 50rpx;
  border: none;
  outline: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn::after {
  border: none;
}

/* 按钮变体 */
.btn-primary {
  background: linear-gradient(135deg, #1a5f1a 0%, #2a7a2a 100%);
  color: white;
}

.btn-secondary {
  background: #2196F3;
  color: white;
}

.btn-success {
  background: #4CAF50;
  color: white;
}

.btn-warning {
  background: #FF9800;
  color: white;
}

.btn-danger {
  background: #ff6b6b;
  color: white;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #1a5f1a;
  color: #1a5f1a;
}

.btn-small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 30rpx 50rpx;
  font-size: 36rpx;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.card:hover {
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-content {
  margin-bottom: 20rpx;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

/* 表单元素样式 */
.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input, .form-textarea, .form-select {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  background: white;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus, .form-textarea:focus, .form-select:focus {
  border-color: #1a5f1a;
  outline: none;
}

.form-input:disabled, .form-textarea:disabled, .form-select:disabled {
  background: #f5f5f5;
  color: #999;
}

.form-textarea {
  min-height: 150rpx;
  line-height: 1.4;
}

.form-error {
  color: #ff6b6b;
  font-size: 24rpx;
  margin-top: 10rpx;
}

